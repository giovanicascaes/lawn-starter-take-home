{
  "name": "lawn-starter-take-home",
  "version": "1.0.0",
  "description": "Full-stack application with React frontend and Node.js backend",
  "private": true,
  "workspaces": [
    "packages/frontend",
    "packages/backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd packages/frontend && npm run dev",
    "dev:backend": "cd packages/backend && npm run dev",
    "dev:backend:watch": "cd packages/backend && npm run dev:watch",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd packages/frontend && npm run build",
    "build:backend": "cd packages/backend && npm run build",
    "start": "npm run start:backend",
    "start:frontend": "cd packages/frontend && npm run start",
    "start:backend": "cd packages/backend && npm run start",
    "docker:build": "docker compose -f docker-compose.yml build",
    "docker:build:dev": "docker compose -f docker-compose.yml -f docker-compose.override.yml build",
    "docker:up": "docker compose -f docker-compose.yml up",
    "docker:up:dev": "docker compose -f docker-compose.yml -f docker-compose.override.yml up",
    "docker:up:prod": "docker compose -f docker-compose.yml up -d",
    "docker:down": "docker compose down",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:backend": "prettier --write packages/backend/src/**/*.{js,ts,json}",
    "format:frontend": "prettier --write packages/frontend/src/**/*.{js,ts,jsx,tsx,json,css}",
    "format:app": "prettier --write packages/frontend/app/**/*.{js,ts,jsx,tsx,json,css}"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "prettier": "^3.6.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
